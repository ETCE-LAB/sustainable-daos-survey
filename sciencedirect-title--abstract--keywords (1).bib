@article{KOBASHI2020115419,
title = {On the potential of “Photovoltaics + Electric vehicles” for deep decarbonization of Kyoto’s power systems: Techno-economic-social considerations},
journal = {Applied Energy},
volume = {275},
pages = {115419},
year = {2020},
